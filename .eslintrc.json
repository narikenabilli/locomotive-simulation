{
  "extends": ["eslint:recommended", "airbnb"],
  "rules": {
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
    "react/require-extension": "off",
    "prefer-template": 0,
    "func-names": 0,
    "no-else-return": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "max-len": [2, {
      "code": 120,
      "ignoreComments": true,
      "ignoreUrls": true
    }],
    "strict": 0,
    "no-param-reassign": 0,
    "new-cap": ["error", {
      "newIsCap": true,
      "capIsNew": false
    }],
    "prefer-rest-params": 0,
    "no-plusplus": 0
  },

  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  }
}